#!/usr/bin/perl -w
##Copyright (C) 2013 by CF
sub total{
	my $sum = 0;
	foreach (@_){
		$sum += $_;
	}
	$sum;
}

sub above_average{
	my @above_average_list = {};
	my $average = (total(@_))/@_;
	print $average;
	foreach (@_){
		if($_ > $average){
			push @above_average_list ,$_;
		}
	}
	@above_average_list;
}

my @fred =1..1000;
my $fred_total = total(@fred);
print "The total of \@fred is $fred_total.\n";
my @fred_average = above_average(@fred);
print "The total of \@fred is @fred_average.\n";

