use 5.010;
greet_test("Barney");
greet_test("Fred");
greet_test("Wilma");
greet_test("Betty");

sub greet_test{
	state $names;
	my $new = shift;
	print "Hi $new!";
	if($names){
		print "I've seen: $names\n";
	}
	else {
		print "You are the first one here !\n";
	}
	$names = $new;
}


